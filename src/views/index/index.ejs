<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lumina</title>
    <link rel="icon" href="/images/logo-lumina.png" type="image/png">
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Archivo+Black&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/normalize.css">
</head>
<body>
    <%- include('./partials/header.ejs') %>
    <main>
        <section class="sale-section">
            <article>
                <video class="sale-video-mobile" playsinline="true" autoplay="autoplay" loop="loop" muted="muted" src="/videos/index/lumina-off-mobile-video.mp4"></video>
            </article>
            <article>
                <video class="sale-video-desktop" playsinline="true" autoplay="autoplay" loop="loop" muted="muted" src="/videos/index/lumina-off-desktop-video.mp4"></video>
            </article>
        </section>
        <section class="featured-products">
            <header class="carousel-title">
                <h4>Productos Destacados</h4>
                <div class="swipper-buttons">
                    <div>
                        <img src="/images/index/swipper-button-left.svg" alt="swp left" />
                    </div>
                    <div>
                        <img src="/images/index/swipper-button-right.svg" alt="swp right"/>
                    </div>
                </div>
            </header>
            <div class="carousel-container">
                <% featuredProducts.map(product => { %>
                    <form action="/products/detail/<%= product.id%>" method="get"  class="carousel-item">
                        <button type="submit">
                            <img src="/images/productDetail/<%= product.img[0] %>" alt="Zapatillas Racer">
                        <div class="item-description">
                            <p class="item-name"><%= product.name %></p>
                            <div class="item-price-container">
                                <p class="item-price-old">$<%= product.price %></p>
                                <p class="item-price">$<%= (product.price*(product.offer/100)).toFixed(3) %></p>
                                <p class="item-discount">%<%= product.offer %></p>
                            </div>
                        </div>
                    </button>
                    </form>
                <%})%>
            </div>
        </section>
        <section class="catalog">
            <article>
                <div class="catalog-item">
                    <img src="/images/index/sneakers.jpg" />
                    <div class="text-overlay">
                        <p>CALZADO</p>
                        <a>VER MÁS</a>
                    </div>
                </div>
            </article>
            <article>
                <div class="catalog-item">
                    <img src="/images/index/sportswear.jpg" />
                    <div class="text-overlay">
                        <p>ROPA</p>
                        <a>VER MÁS</a>
                    </div>
                </div>
            </article>
            <article>
                <div class="catalog-item">
                    <img src="/images/index/accesories.jpg" />
                    <div class="text-overlay">
                        <p>ACCESORIOS</p>
                        <a>VER MÁS</a>
                    </div>
                </div>
            </article>
        </section>
        <a class="btn-whatsapp bt-wsp-right">
            <img src="/images/index/whatsapp-pill.svg" alt="Whatssapp Pill" />
        </a>
    </main>
    <%- include('./partials/footer.ejs') %>
</body>
</html>